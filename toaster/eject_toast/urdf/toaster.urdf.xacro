<robot name="toaster" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Toaster Body -->
  <link name="toaster_body">
    <!-- <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial> -->
   <visual>
    <geometry>
        <mesh filename="file://$(find eject_toast)/meshes/toaster.stl" scale="0.25 0.25 0.25" />
    </geometry>
      <material name="toaster_material">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
  </link>

  <!-- Toast Link -->
  <link name="toast">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.2"/>
      </geometry>
      <material name="toast_material">
        <color rgba="0.9 0.6 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Prismatic Joint -->
  <joint name="toast_joint" type="prismatic">
    <parent link="toaster_body"/>
    <child link="toast"/>
    <origin xyz="0 0.05 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.1" effort="5.0" velocity="1.0"/>
  </joint>
</robot>